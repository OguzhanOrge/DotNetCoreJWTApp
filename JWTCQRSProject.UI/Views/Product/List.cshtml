@model List<ProductListModel>
@{
    Layout = "_Layout";
}
@{
    if (Model?.Count > 0)
    {
        <div class="text-end">
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Yeni Ürün</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">CategoryId</th>
                    <th scope="col"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>@item.CategoryId</td>
                        <td><a class="btn btn-danger" asp-action="Remove" asp-controller="Product" asp-route-id="@item.Id">Delete</a></td>
                        <td><a class="btn btn-danger" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center ">
            Kayıt yok
        </div>
    }
}
