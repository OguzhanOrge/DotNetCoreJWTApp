@model List<CategoryListModel>
@{
	Layout = "_Layout";
}
@{
	if (Model?.Count > 0)
	{
        <div class="text-end">
         <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Yeni Kategori</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Definations</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Definations</td>
                        <td><a class="btn btn-danger" asp-action="Remove" asp-controller="category" asp-route-id="@item.Id">Delete</a></td>
                        <td><a class="btn btn-success" asp-action="Update" asp-controller="category" asp-route-id="@item.Id">Güncelle</a></td>
                    </tr>
                }
            </tbody>
        </table>
	}
	else
	{
		<div class="text-center ">
		Kayıt yok
		</div>
	}
}
